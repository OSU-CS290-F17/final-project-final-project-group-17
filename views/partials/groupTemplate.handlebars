<div id="container">
	<div class="group-container" id="group-{{letter}}">
		<span class="group-container-header" id="group-{{letter}}-header">
			<h2 class="group-header-title">Group {{letter}}</h2>
			<h2 class="group-header-add-task" id="add-task-{{letter}}">+</h2>
		</span>

		<div class="task-container" data-group="{{taskGroup}}" data-priority="{{taskPriority}}">
			<span>
				<h1 class="short-desc">{{taskShortDesc}}</h1>
				<h1 class="add-date">{{taskAddDate}}</h1>
				<h1 class="due-date">{{taskDueDate}}</h1>
				<h1 class="remove-task">--</h1>
			</span>
		</div>

	</div>